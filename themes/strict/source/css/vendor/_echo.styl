/*36/30/24/18/14*/
.echo
  font-size-rem(14)
  line-height: 1.5
  a
    color: $base-link-color
    &:hover, &:focus, &:active
      text-decoration: underline
  h1
  h2
  h3
  h4
  h5
  h6
    font-weight: normal
    line-height: 1.5
    margin: 1em 0
  h1
    font-size-rem(30)
  h2
    font-size-rem(24)
  h3
    font-size-rem(18)
  h4
  h5
  h6
    font-size-rem(14)
  p
    margin: 1em 0
    font-size-rem(16)

  address
  blockquote
  dl
  figure
  form
  hr
  img
  ol
  pre
  table
  ul
    margin: 1.6em 0
  hr
    margin: 1.6em auto
    width: 61%
    height: 4px
    border: none
    background: #EEEEEE
  img
    max-width: 100%
    height: auto
  caption
    text-transform: uppercase
    padding: 1em
    color: #777777
  thead
    background-color: #EEEEEE
  td
  th
    border: 1px solid #cbcbcb
    padding: .5em 1em
    text-align: left
    font-weight: normal
  tfoot
    background-color: #f4f4f4
  dl
  ol
  ul
    margin-left: 2em
  dd
    margin-left: 1em
  ol
    list-style: decimal outside
  ul
    list-style: disc outside
  figcaption
    font-size: .85em
  blockquote small,
  cite
    color: #777
  abbr
    cursor:help
  address
    font-style: normal
  code
    display: inline-block
    // ><code>
    // 排版无需空格, 使用半角空格宽度防止粘连 1em / 2 / 2
    // margin: 0 .25em
    // >[]<code></code>,
    // 排版须有空格, 1em 防止标点符号粘连
    margin: 0 .1em
    padding: 0 .5em
    border: 1px solid #f0f0f0
    border-radius: 3px
    background-color: #F7F7F7
    text-shadow: 0 1px 0 #FFFFFF
    white-space: nowrap
    font-size: 0.85em
    line-height: 1.1
    vertical-align: text-bottom
    font-family: "heiti", "微软雅黑"
  kbd
    @extend .echo code
    box-shadow: 0 1px 0px #CCCCCC, 0 0 0 2px #FFFFFF inset
  blockquote
    padding: 1.6em
    border-left: 5px solid #DDDDDD
    background-color: #EEEEEE
