doctype html
html(lang="zh-CN")
  head
    include head
  body
    header.head(style="opacity:0")
      h1.head-title.u-fl: a(href = config.root)
        = config.title
      include nav
      
    main.main
      block main
    
    footer.foot
      div.foot-copy.u-fl
        != '&copy; 2016-' + date(new Date(), 'YYYY') + ' ' + (config.author || config.title)
        if theme.themes_mata
          a(href="http://www.beianbaba.com/icp/ochukai.me" target="view_window" style="color:#fff")
            != '（' + theme.themes_mata + '）'
      block menu
    include foot
